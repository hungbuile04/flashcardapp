<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Circle?>

<AnchorPane prefHeight="408.0" prefWidth="590.0" stylesheets="@stylesheet/main_window.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.flashcardapp.Controller.Display.MainWindowController">
    <children>
        <TableView fx:id="tableDeckView" editable="true" layoutX="10.0" layoutY="152.0" prefHeight="199.0" prefWidth="580.0">
            <columns>
                <TableColumn fx:id="deckName" prefWidth="238.0" text="Name" />
                <TableColumn fx:id="newCards" prefWidth="98.0" text="New" />
                <TableColumn fx:id="learnedCards" minWidth="0.0" prefWidth="132.0" text="Learned" />
                <TableColumn fx:id="dueCards" prefWidth="131.0" text="Due" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
        <Label fx:id="stats_label" layoutX="1.0" layoutY="363.0" prefHeight="20.0" prefWidth="601.0" text="Today Stats" />
        <Label fx:id="deck_list" layoutX="-1.0" layoutY="111.0" prefHeight="23.0" prefWidth="601.0" text="Deck List" />
        <Button fx:id="addCardButton" layoutX="327.0" layoutY="55.0" mnemonicParsing="false" onMouseClicked="#addCard" prefHeight="38.0" prefWidth="96.0" text="+ New Card" />
        <Button fx:id="fav_button" layoutX="187.0" layoutY="55.0" mnemonicParsing="false" onMouseClicked="#statistic" prefHeight="38.0" prefWidth="89.0" text="Statistics" />
        <Label fx:id="text_label" layoutY="14.0" prefHeight="28.0" prefWidth="601.0" text="EngHUST" />
      <Label fx:id="cardStudied" layoutY="381.0" prefHeight="20.0" prefWidth="601.0" text="20 cards studied" />
      <Button fx:id="settingsButton" layoutX="543.0" layoutY="14.0" mnemonicParsing="false" onAction="#switchtoSettings">
         <graphic>
            <ImageView fitHeight="107.0" fitWidth="29.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@stylesheet/resource/icon.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Circle fx:id="strokeImg" fill="DODGERBLUE" layoutX="28.0" layoutY="42.0" radius="18.0" stroke="BLACK" strokeType="INSIDE" />
      <Circle fx:id="imageMain" fill="DODGERBLUE" layoutX="28.0" layoutY="42.0" radius="18.0" stroke="BLACK" strokeType="INSIDE" />
      <Label fx:id="nameMain" layoutX="54.0" layoutY="33.0" text="Your name" />
    </children>
</AnchorPane>
