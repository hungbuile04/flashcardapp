<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="408.0" prefWidth="590.0" stylesheets="@stylesheet/main_window.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.flashcardapp.Controller.MainWindowController">
   <children>
        <TableView fx:id="tableDeckView" editable="true" layoutX="8.0" layoutY="152.0" prefHeight="199.0" prefWidth="580.0">
            <columns>
                <TableColumn fx:id="deckName" prefWidth="238.0" text="Name" />
                <TableColumn fx:id="newCards" prefWidth="98.0" text="New" />
                <TableColumn fx:id="learnedCards" minWidth="0.0" prefWidth="132.0" text="Learned" />
                <TableColumn fx:id="dueCards" prefWidth="131.0" text="Due" />
            </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
        </TableView>
        <Label fx:id="stats_label" layoutX="1.0" layoutY="371.0" prefHeight="20.0" prefWidth="590.0" text="Today stats 20 cards studied" />
        <Label fx:id="deck_list" layoutX="-1.0" layoutY="111.0" prefHeight="17.0" prefWidth="590.0" text="Deck List" />
          <Button fx:id="addCardButton" layoutX="320.0" layoutY="55.0" mnemonicParsing="false" onMouseClicked="#addCard" prefHeight="38.0" prefWidth="96.0" text="+ New Card" />
          <Button fx:id="fav_button" layoutX="180.0" layoutY="55.0" mnemonicParsing="false" prefHeight="38.0" prefWidth="89.0" text="Favourite" />
      <Label fx:id="text_label" layoutY="14.0" prefHeight="23.0" prefWidth="590.0" text="EngHust" />
      <Button fx:id="setting_button" layoutX="-1.0" layoutY="-14.0" mnemonicParsing="false" prefHeight="46.0" prefWidth="43.0" />
   </children>
</AnchorPane>
