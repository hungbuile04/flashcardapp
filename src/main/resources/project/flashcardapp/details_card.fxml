   <children>
      <Button fx:id="saveBtn" layoutX="267.0" layoutY="256.0" mnemonicParsing="false" onMouseClicked="#saveChanges" prefHeight="25.0" prefWidth="60.0" text="Save" />
      <Button fx:id="cancelBtn" layoutX="173.0" layoutY="256.0" mnemonicParsing="false" onMouseClicked="#cancelChanges" prefHeight="28.0" prefWidth="69.0" text="Cancel" />
      <GridPane layoutX="87.0" layoutY="64.0" prefHeight="164.0" prefWidth="240.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="102.0" minWidth="10.0" prefWidth="55.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="158.0" minWidth="10.0" prefWidth="158.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label fx:id="front" text="Front:" />
