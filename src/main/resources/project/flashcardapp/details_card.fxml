            <TextField fx:id="categoryTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         </children>
      </GridPane>
      <Label fx:id="cardDetailLabel" layoutX="169.0" layoutY="27.0" text="Card's details" />
      <Button fx:id="deleteBtn" layoutX="87.0" layoutY="256.0" mnemonicParsing="false" onMouseClicked="#deleteCard" text="Delete" />
   </children>
</AnchorPane>
