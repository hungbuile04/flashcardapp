<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@stylesheet/review_mode.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.flashcardapp.Controller.LearningMode.ReviewModeController">
   <children>
      <StackPane fx:id="CardPane" layoutX="71.0" layoutY="81.0" onMouseClicked="#flipCard" prefHeight="220.0" prefWidth="469.0">
         <Label fx:id="questionLabel" text="Question will appear here" />
         <Label fx:id="answerLabel" text="Answer will appear here" visible="false" />
      </StackPane>
      <Button fx:id="hardBtn" layoutX="145.0" layoutY="331.0" mnemonicParsing="false" onMouseClicked="#isHard" prefWidth="73.0" text="Hard" />
      <Button fx:id="mediumBtn" layoutX="273.0" layoutY="331.0" mnemonicParsing="false" onMouseClicked="#isMedium" prefHeight="25.0" prefWidth="73.0" text="Medium" />
      <Button fx:id="easyBtn" layoutX="400.0" layoutY="331.0" mnemonicParsing="false" onMouseClicked="#isEasy" prefHeight="25.0" prefWidth="73.0" text="Easy" />
      <Button fx:id="backBtn" layoutX="-12.0" layoutY="-7.0" mnemonicParsing="false" onMouseClicked="#backToDeckInfoWindow" />
      <Label fx:id="instructionLabel" alignment="CENTER" layoutX="237.0" layoutY="307.0" prefHeight="17.0" prefWidth="138.0" text="Click on the card to flip it" textAlignment="CENTER" />
      <Label fx:id="deckName" layoutX="44.0" layoutY="20.0" prefHeight="19.0" prefWidth="531.0" text="IELTS: Intermediate" />
      <ProgressBar fx:id="progressBar" layoutX="71.0" layoutY="64.0" prefHeight="7.0" prefWidth="469.0" progress="0.9" />
      <Label fx:id="cardLearned" layoutX="510.0" layoutY="40.0" text="2" />
      <Label fx:id="totalCard" layoutX="522.0" layoutY="40.0" text="30" />
      <Label fx:id="hardTime" layoutX="158.0" layoutY="362.0" text="+ 10min" />
      <Label fx:id="mediumTime" layoutX="289.0" layoutY="362.0" text="+ 5min" />
      <Label fx:id="easyTime" layoutX="413.0" layoutY="362.0" text="+ 2min" />
      <Button fx:id="editCard" layoutX="28.0" layoutY="362.0" onMouseClicked="#detailCard" text="Edit" />
   </children>
</AnchorPane>