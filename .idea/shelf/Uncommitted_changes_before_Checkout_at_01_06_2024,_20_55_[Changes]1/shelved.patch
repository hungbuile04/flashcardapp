     FXMLLoader fxmlLoader = new FXMLLoader(getClass().getResource(\"/project/flashcardapp/result_review_mode.fxml\"));\n        Scene scene = new Scene(fxmlLoader.load());\n        stage.setScene(scene);\n        stage.show();\n    }\n\n}\n\n\n\n\n\n\n
